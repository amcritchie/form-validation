<h1>My Lists</h1>

<a href="/task_lists/new">+ Add Task List</a>


<% @task_lists.each do |task_list| %>

    <section class="task-list">
      <h1><%= task_list.name %>
        <%= link_to "Edit", "/task_lists/#{task_list.id}/edit" %>
        <%= link_to "Add Task", new_task_list_task_path(task_list) %></h1>

      <% task_list.tasks.each do |task| %>
          <p>
            <%= task.body %>  -
            <%= days = (task.due_date - Date.today).to_i %>
            <% if days == 1 %>
                day
            <% else %>
                days
            <% end %>
          </p>
      <% end %>
    </section>

    <hr>
<% end %>
