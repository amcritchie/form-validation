<!DOCTYPE html>
<html>
<head>
  <title>Rails for Days!</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'shadow.png' %>
</head>
<body>
<header>
  <div class="container">
    <div class="logo">
      <%= link_to "Rails Practice", root_path %>
    </div>
    <% if current_user %>
      <div class="logout">
        <%= current_user.email %> |
        <%= link_to "Logout", signout_path %>
      </div>
    <% end %>
  </div>
</header>
<main>
  <div class="container">
    <% if flash[:error] %>
        <div style="color: red; padding: 10px"><%= flash[:error] %></div>
    <% end %>
    <% if flash[:success] %>
        <div style="background-color: lime; border: solid limegreen 2px; padding: 10px"><%= flash[:success] %></div>
    <% end %>
    <%= yield %>
  </div>
</main>
</body>
</html>
